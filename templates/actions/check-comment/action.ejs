name: Check comment
description: show comment with results

inputs:
  token:
    required: true
    description: GITHUB_TOKEN
  title:
    required: true
    description: title<% checks.forEach(function({ key, name }){ %>
  <%- key %>:
    required: true
    description: <%- name %><% }) %>

runs:
  using: composite
  steps:
      - name: Comment
        uses: sendsay-ru/rewritable-pr-comment@v1.0.0
        with:
          message: "${{ inputs.title }} \n\n
                  | <%- checks.map(({ name }) => name).join(' | ') %> |\n
                  | <%- checks.map(() => '---').join(' | ') %> |\n
                  | <%- checks.map(({ key }) => ' ${{ inputs.' + key + ' }} ').join(' | ') %> |\n\n
                  [ðŸ”— See details](${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }})"
          GITHUB_TOKEN: ${{ inputs.token }}
          COMMENT_IDENTIFIER: "comment-check-result"
